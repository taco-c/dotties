#!/bin/sh

_sync() {
	cp $1 $2/ && echo $1 "->" $2 || echo $1 "failed"
}

[ "$1" = "" ] && exit


cd $HOME
_sync ".profile" "$1"
_sync ".zshrc" "$1"
_sync ".config/aliases" "$1/.config"
_sync ".config/bspwm/bspwmrc" "$1"
_sync ".config/keymaps/*" "$1"
_sync ".config/nvim/init.vim" "$1"
_sync ".config/" "$1"

